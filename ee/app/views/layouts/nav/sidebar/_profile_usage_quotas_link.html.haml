  = link_to profile_usage_quotas_path do
    .nav-icon-container
      = custom_icon('pipeline')
    %span.nav-item-name
      = s_('UsageQuota|Usage Quotas')
  %ul.sidebar-sub-level-items.is-fly-out-only
    = nav_link(controller: :usage_quotas, html_options: { class: "fly-out-top-item" } ) do
